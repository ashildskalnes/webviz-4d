#!/bin/bash
#set -x

if [ -d "venv" ]; then
    rm -rf venv
fi

source /prog/res/komodo/2024.06.10-py311/enable

echo "Creating new virual environment: venv"

python -m venv venv
source ./venv/bin/activate

echo "Installing all necessary packages ..."

pip install --upgrade pip
pip install -r requirements.txt
pip install python-dotenv
pip install pydantic
pip install pydantic_settings
pip install fmu-sumo
pip install webviz-config
pip install webviz-config-equinor
pip install black
pip install pylint
pip install pytest
pip install PrettyTable
pip install /private/ashska/dev_311/common-python-sdk-master/common-python-sdk-master
pip install -e .

echo "WebViz-4D installation completed"
echo "Virtual environment created: venv"
